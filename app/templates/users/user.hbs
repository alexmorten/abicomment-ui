<div class="user">

  {{single-user user=model}}
  <div class="user-data">
    <div class="name card">
      <p id="forname">{{model.forename}}</p>
      <p id="lastname">{{model.name}}</p>
    </div>
  </div>
  <div class="user-comment">
    {{#user-comment create="createComment" user=model comments=model.comments blur="blurBackground"}}
      {{#unless limitTooHigh}}<button type="button" {{action "loadMore"}}>Mehr laden</button> {{/unless}}
    {{/user-comment}}
  </div>
  {{outlet}}


</div>
