<li class="poll">
<h3 >  {{poll.topic}}  </h3>
  <ul class="poll-options">
    {{#each poll.options as |option|}}
      {{single-option class="poll-option-container" option=option vote="vote" blur="blur"}}
    {{/each}}
    
  </ul>
  {{#if hasVotes}}
    {{poll-chart options=poll.options}}
  {{/if}}
</li>
<hr class="border">
{{yield}}
