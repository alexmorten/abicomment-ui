{{#if user.attendings }}
  <div class="element">

  <h3 class="marginless">Kurse</h3>
  <ul>
    {{#each withNotes as |attending|}}
    {{#link-to 'courses.course' attending.course}}
      <li> <b>{{attending.note}}: </b>  {{attending.course.name}} {{attending.course.teacher}}</li>
    {{/link-to}}
    {{/each}}

    {{#each withoutNotes as |attending|}}
    {{#link-to 'courses.course' attending.course}}
      <li>{{attending.course.name}} {{attending.course.teacher}}</li>
    {{/link-to}}
    {{/each}}
  </ul>
</div>

{{/if}}
{{#if comments}}
<div class="element">

<h3 class="marginless">Kommentare</h3>
{{#unless currentUser}}
{{simple-form create="create" placeholder="Kommentar" iconShow="plus" iconHide="minus" class="moretop"}}
{{/unless}}
{{comment-listing comments=comments blur="blur"}}
{{yield}}
</div>
{{else}}
{{#unless currentUser}}
<div class="element">
  {{simple-form create="create" placeholder="Kommentar" openText="Kommentar hinzuf√ºgen"}}
</div>
{{/unless}}

{{/if}}
