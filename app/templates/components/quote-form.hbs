{{#unless noToggleShowing }}
  {{#if iconShow}}
    <a {{action 'toggleShowing'}} class="action">
      <i class={{classes}}></i>
    </a>
    {{else}}
    <button type="button" class="toggleShowing" {{action "toggleShowing"}}>

      {{#if showing }}
        {{if closeText closeText 'hide'}}
      {{else}}
        {{if openText openText 'Hinzuf√ºgen'}}
      {{/if}}
    </button>
  {{/if}}
{{/unless}}
{{#liquid-if showing}}
  <form class="comment form" >

    {{input  type="text" value=quoted placeholder=1stph}}
    {{input  type="text" value=text placeholder=2ndph}}

    <button type="submit" name="button" {{action "create" }} class={{if createable 'ok' 'disabled'}}>{{if buttonText buttonText 'verfassen'}}</button>
  </form>
{{/liquid-if}}
{{yield}}
